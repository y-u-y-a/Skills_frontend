{
  "compilerOptions": {
    // "typeRoots": ["@types", "node_modules/@types"],
    "target": "esnext",
    "module": "es6",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
